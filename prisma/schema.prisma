datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


enum EstadoPedido {
  PREPARANDO
  LLEVANDO
  ENTREGADO
} 

enum Rol {
  DELIVERY
  RECEPCIONISTA
  DUEÑO
}

enum MetodoPago {
  EFECTIVO
  TRANSFERENCIA
}

enum TipoEntrega {
  RETIRO_LOCAL
  DELIVERY
}

model Usuario {
  id          Int      @id @default(autoincrement())
  nombre      String
  gmail       String   @unique
  contraseña  String
  rol         Rol
  creadoEn    DateTime @default(now())
}

model Pedido {
  id               Int              @id @default(autoincrement())
  nombreCliente    String
  productos        PedidoProducto[]
  precioDelivery   Float?            @default(800.0)
  estado           EstadoPedido?     @default(PREPARANDO)
  horarioEntrega   DateTime?
  metodoPago       MetodoPago       @default(EFECTIVO)
  detalle          String?
  tipoEntrega      TipoEntrega      @default(RETIRO_LOCAL)
  precioTotal      Float?            @default(0.0)
  creadoEn         DateTime         @default(now())
}

model Producto {
  id           Int               @id @default(autoincrement())
  nombre       String
  precioUnitario Float
  pedidoProductos PedidoProducto[]
}

model PedidoProducto {
  id              Int      @id @default(autoincrement())
  pedidoId        Int
  productoId      Int
  cantidad        Int
  precioTotal     Float

  pedido          Pedido   @relation(fields: [pedidoId], references: [id],onDelete: Cascade)
  producto        Producto @relation(fields: [productoId], references: [id],onDelete: Cascade)
}



